<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
 >
 <include
     android:id="@+id/appBar"
     layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:background="@color/layer1"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/linearmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/back_white"
                    android:elevation="3dp"
                    android:gravity="center"

                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="20dp"
                        android:alpha="0.7"
                        android:background="@drawable/border"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/search"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/search_icon" />

                        <Button
                            android:id="@+id/note"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/note" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:inputType="number"
                            android:padding="5dp"
                            android:text="رقم العداد"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/counter_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"

                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="16072"-->
                        <!--android:textColor="@color/darkblue_"-->
                        <!--android:textSize="12sp" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:padding="5dp"
                            android:text="اسم العميل"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cust_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="القراءة السابقة"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/previous_read"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1.2"
                            android:text="متر مكعب"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="القراءة الحالية"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/current_read"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"

                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1.2"
                            android:text="متر مكعب"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="الاستهلاك"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/consuming"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1.2"
                            android:text="متر مكعب"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="قيمة الاستهلاك"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/consuming_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"

                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1.2"
                            android:text="دينار"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="رصيد سابق"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/previous_palance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"

                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1.2"
                            android:text="دينار"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="بدل اعادة غاز"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/gas_return"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:padding="5dp"

                            android:text="0.0"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="بدل الخدمات"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/service_return"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:padding="5dp"

                            android:text="0.0"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:padding="5dp"
                            android:text="مجموع بدل الخدمات بعد الضريبة"
                            android:textColor="@color/darkblue_"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tax_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittext_back"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@color/darkblue_"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
