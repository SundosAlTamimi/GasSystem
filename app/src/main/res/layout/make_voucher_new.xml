<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
 >
 <include
     android:id="@+id/appBar"
     layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:background="@color/layer1"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/back_white"
            android:elevation="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:gravity="end"
                android:alpha="0.7"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <Button
                    android:id="@+id/search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/search_icon" />

                <Button
                    android:id="@+id/note"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/note" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="رقم العداد"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:inputType="number"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/counter_no"
                    android:layout_width="270dp"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="16072"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="اسم العميل"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/cust_no"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="القراءة السابقة"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/previous_read"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:inputType="number"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="متر مكعب"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="القراءة الحالية"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/current_read"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="متر مكعب"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="الاستهلاك"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/consuming"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="متر مكعب"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="قيمة الاستهلاك"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/consuming_value"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="دينار"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="رصيد سابق"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/previous_palance"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="دينار"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="بدل اعادة غاز"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/gas_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="0.0"
                    android:inputType="numberDecimal"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="بدل الخدمات"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/service_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:inputType="numberDecimal"
                    android:text="0.0"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:text="مجموع بدل الخدمات بعد الضريبة"
                    android:background="@drawable/gradiant_background"
                    android:padding="5dp"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:textColor="@color/yellow1"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/tax_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_back"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="397dp"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/back_white"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="match_parent"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/gradiant_background"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="الصافي"
                        android:textColor="@color/yellow1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/net"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_back"
                        android:elevation="2dp"
                        android:inputType="number"

                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/darkblue_"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:background="@drawable/gradiant_background"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="الضريبة"
                        android:textColor="@color/yellow1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/tax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_back"
                        android:elevation="2dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/darkblue_"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"

                        android:background="@drawable/gradiant_background"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="استهلاك الفترة"
                        android:textColor="@color/yellow1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/current_consuming"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_back"
                        android:elevation="2dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/darkblue_"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/yellow1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/gradiant_background"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="القيمة المطلوبة"
                        android:textColor="@color/yellow1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/last_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="3"
                        android:background="@drawable/edittext_back"
                        android:elevation="2dp"
                        android:inputType="number"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/darkblue_"
                        android:textSize="18sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_margin="5dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/save"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="حفظ"
                android:textColor="@color/darkblue_"
                android:elevation="10dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="@drawable/save_yelow_btn"/>
            <Button
                android:id="@+id/cancel_btn"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="الغاء"
                android:textColor="@color/darkblue_"
                android:elevation="10dp"
                android:padding="5dp"
             android:layout_marginRight="95dp"
                android:textSize="18sp"
                android:background="@drawable/back_white"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jjj"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog"
            android:layout_width="450dp"
            android:layout_height="260dp"
            android:visibility="gone"
            android:background="@drawable/dialog_back_v"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="60dp"
                android:text="هل تريد الخروج ؟"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/yes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="نعم" />

                <Button
                    android:id="@+id/no"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="لا" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/black2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jjj"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/noteDialog"
            android:layout_width="410dp"
            android:layout_height="270dp"
            android:visibility="gone"
            android:background="@drawable/back_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اضافة ملاحظة"
                android:layout_marginTop="30dp"
                android:layout_marginStart="60dp"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/noteText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFFFFF"
                android:gravity="top"
                android:padding="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/done"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="تم" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="الغاء" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>