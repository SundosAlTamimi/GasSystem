                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/back_white"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:padding="5dp"
                                android:text="الصافي"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/net"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext_back"
                                android:elevation="2dp"
                                android:gravity="center"

                                android:padding="5dp"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"

                                android:elevation="2dp"
                                android:padding="5dp"
                                android:text="الضريبة"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext_back"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"

                                android:elevation="2dp"
                                android:padding="5dp"
                                android:text="استهلاك الفترة"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/current_consuming"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext_back"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/yellow1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="القيمة المطلوبة"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/last_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edittext_back"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/darkblue_"
                                android:textSize="14sp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_margin="5dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/save"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/save_yelow_btn"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="حفظ"
                        android:textColor="@color/darkblue_"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="95dp"
                        android:background="@drawable/back_white"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="الغاء"
                        android:textColor="@color/darkblue_"
                        android:textSize="14sp" />
