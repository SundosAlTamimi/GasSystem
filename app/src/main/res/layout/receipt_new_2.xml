<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl"
    >
    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:background="@color/layer1"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/back_white"
    android:elevation="10dp"
    android:padding="20dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearSearchNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:gravity="end"
        android:alpha="0.7"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/search_icon" />

        <Button
            android:id="@+id/note"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/note" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="رقم السند"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:inputType="number"
            android:elevation="5dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/receipt_no"
            android:layout_width="270dp"

            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="اسم العميل"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="5dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cust_no"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="المشروع"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/project"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:inputType="number"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="رصيد اخر الفترة"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/last_balance"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:inputType="number"

            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="رقم الحساب"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/account_no"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="رقم العداد"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/counter_no"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:inputType="number"

            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="المبلغ"
            android:background="@drawable/gradiant_background"
            android:padding="5dp"
            android:elevation="2dp"
            android:gravity="center"
            android:textColor="@color/yellow1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/value"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_back"
            android:elevation="2dp"
            android:padding="5dp"
            android:inputType="number"

            android:gravity="center"
            android:textColor="@color/darkblue_"
            android:textSize="18sp"/>


    </LinearLayout>


</LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:elevation="10dp"

            android:layout_margin="40dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/save"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="حفظ"
                android:textColor="@color/darkblue_"
                android:elevation="15dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:background="@drawable/save_yelow_btn"/>
            <Button
                android:id="@+id/cancel_btn"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="الغاء"
                android:textColor="@color/darkblue_"
                android:elevation="15dp"
                android:padding="5dp"
                android:layout_marginRight="95dp"
                android:textSize="18sp"
                android:background="@drawable/back_white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>